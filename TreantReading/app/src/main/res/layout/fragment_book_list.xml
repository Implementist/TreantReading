<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.implementist.treantreading.fragment.BookListFragment">

    <com.implementist.treantreading.RefreshableView
        android:id="@+id/rfvBookList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/standardLightGray">

        <!--RefreshableView的内容不能为空-->
        <!--以下的布局应该换一个陈列类的容器，如RecyclerView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.implementist.treantreading.RefreshableView>

</LinearLayout>
